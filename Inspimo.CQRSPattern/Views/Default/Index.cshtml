@model List<Inspimo.CQRSPattern.CQRSPattern.Results.GetProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <h1 style="text-align:center">Ürün Listesi</h1>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Markası</th>
            <th>Stok Sayısı</th>
            <th>Fiyat</th>
            <th>Durum</th>
            <th>Getir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.ProductBrand</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStatus</td>
                <td><a href="/Default/GetProduct/@item.ProductID" class="btn btn-info">Ürünü Getir</a></td>
                <td><a href="/Default/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Default/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Default/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>